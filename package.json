  "main": "dist/pure-cache.js",
  "module": "dist/pure-cache.es.js",
  "browser": "dist/pure-cache.umd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ganapativs/pure-cache.git"
  },
  "author": "Ganapati V S <vsg.inbox@gmail.com>",
  "license": "MIT",
  "bugs": {
